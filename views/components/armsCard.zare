serve(
    <!-- Card 2 -->
    <div class="rounded-xl min-w-[300px] flex flex-col">
      <img src="@(src)" alt="" class=" object-cover object-center h-52 w-full rounded-t-xl"/>
      
      <div class="bg-[@(bgHex)] rounded-b-xl px-4 py-2 pb-4 flex-1">
        <p class="font-semibold text-lg mt-1 text-[@(textHex)]">@(caption)</p>
        <p class="text-sm mb-2">@(text)</p>
        <p class="text-sm"><a href="#">Find out more ...</a></p>

      </div>
    </div>

)